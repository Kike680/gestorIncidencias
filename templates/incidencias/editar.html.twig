{% extends 'base.html.twig' %}

{% block title %}Editar Incidencia{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Editar Incidencia
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'g-3'}}) }}
                    <div class="mb-3">
                        {{ form_row(form.titulo, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.estado, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
