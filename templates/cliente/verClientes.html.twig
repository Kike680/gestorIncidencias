{% extends 'base.html.twig' %}


{% block title %}Clientes{% endblock %}

{% block body %}


<img src="/subida/fotos/{{app.user.foto}}" class="img-fluid rounded-circle mb-4" style="max-width: 150px; height: auto;" alt="Foto de perfil">



<div class="container mt-5">
    <h2 class="mb-4">Clientes</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Tel√©fono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for cliente in clientes %}
                <tr>
                    <td>{{ cliente.nombre }}</td>
                    <td>{{ cliente.apellidos }}</td>
                    <td>{{ cliente.telefono }}</td>
                    <td>
                        <a href="{{ path('borrarCliente', {id:cliente.id}) }}" class="btn btn-danger">Borrar</a>
                        <a href="{{ path('cliente_incidencias', {id:cliente.id}) }}" class="btn btn-info">Ver Incidencias</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('crearCliente') }}" class="btn btn-primary">Crear Cliente</a>
    <a href="{{ path('mostrarTodasIncidencias')}}" class="btn btn-primary">Mostrar todas las Incidencias</a>
    
</div>
{% endblock %}
