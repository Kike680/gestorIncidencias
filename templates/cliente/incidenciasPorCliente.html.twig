{% extends 'base.html.twig' %}

{% block title %}Incidencias de {{ cliente.nombre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Incidencias de {{ cliente.nombre }}</h2>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Fecha Creación</th>    
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        {% for incidencia in incidencias %}
            <tr>
                <td>{{ incidencia.id }}</td>
                <td>{{ incidencia.titulo }}</td>
                <td>{{ incidencia.fechaCreacion|date('Y-m-d H:i:s') }}</td>
                <td>{{ incidencia.estado }}</td>
                <td>
                    <a href="{{ path('borrarIncidencia', {id:incidencia.id}) }}" class="btn btn-danger">Borrar Incidencia</a>
                    <a href="{{ path('editarIncidencia', {id:incidencia.id}) }}" class="btn btn-primary">Editar Incidencia</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('crearIncidencia', {id: cliente.id}) }}" class="btn btn-success">Crear Incidencia</a>
    <a href="{{ path('app_cliente') }}" class="btn btn-secondary">Volver a los Clientes</a>
    
</div>

{% endblock %}
